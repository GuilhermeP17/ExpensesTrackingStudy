<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_view_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/title_card_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:text="@string/card_number_title"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/title_saldo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_saldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="monospace"
            android:gravity="end"
            android:text="@string/balance_title"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title_card_number"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:text="@string/card_number_placeholder"
            android:textColor="#9eaab0"
            app:layout_constraintEnd_toStartOf="@id/card_saldo"
            app:layout_constraintStart_toStartOf="@id/title_card_number"
            app:layout_constraintTop_toBottomOf="@id/title_card_number" />

        <TextView
            android:id="@+id/card_saldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:gravity="end"
            android:text="@string/balance_placeholder"
            android:textColor="#9eaab0"
            app:layout_constraintEnd_toEndOf="@id/title_saldo"
            app:layout_constraintStart_toEndOf="@id/card_info"
            app:layout_constraintTop_toBottomOf="@id/title_saldo" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/card_income_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="55dp" />

        <TextView
            android:id="@+id/title_income_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="@string/received_balance_title"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/title_outcome_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_income_barrier" />

        <TextView
            android:id="@+id/title_outcome_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="monospace"
            android:gravity="end"
            android:text="@string/outgoing_balance_title"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title_income_balance"
            app:layout_constraintTop_toBottomOf="@id/card_income_barrier" />

        <ImageView
            android:id="@+id/ic_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_income_arrow"
            app:layout_constraintBottom_toBottomOf="@id/income_info"
            app:layout_constraintStart_toStartOf="@id/title_income_balance"
            app:layout_constraintTop_toTopOf="@id/income_info" />

        <TextView
            android:id="@+id/income_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:text="@string/received_balance_placeholder"
            android:textColor="#9eaab0"
            app:layout_constraintEnd_toStartOf="@id/ic_outcome"
            app:layout_constraintStart_toEndOf="@id/ic_income"
            app:layout_constraintTop_toBottomOf="@id/title_income_balance" />

        <ImageView
            android:id="@+id/ic_outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_outcome_arrow"
            app:layout_constraintBottom_toBottomOf="@id/income_info"
            app:layout_constraintStart_toEndOf="@id/income_info"
            app:layout_constraintEnd_toStartOf="@id/outcome_info"
            app:layout_constraintTop_toTopOf="@id/income_info" />

        <TextView
            android:id="@+id/outcome_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:gravity="end"
            android:text="@string/outgoing_balance_placeholder"
            android:textColor="#9eaab0"
            app:layout_constraintEnd_toEndOf="@id/title_outcome_balance"
            app:layout_constraintStart_toEndOf="@id/ic_outcome"
            app:layout_constraintTop_toBottomOf="@id/title_outcome_balance" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>