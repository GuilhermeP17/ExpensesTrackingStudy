<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_view_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/main_background"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_navigation_separator"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="style/bottomNavigationStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_view_fragment_holder"
        app:menu="@menu/bottom_main_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>